{% extends "base.twig" %}
{% block title %}
    Admin Index
{% endblock %}
{% block content %}
    {% for post in posts %}
        <div class="row">
            <div class="col-md-4">
                    <a href="{{ path_for('posts.displaySingle', { id: post.id }) }}">{{ post.title }}</a>
            </div>
            <div class="col-md-4">
                <a href="{{ path_for('admin.edit', { id: post.id }) }}">Edit</a>
            </div>
            <div class="col-md-4">
                <a href="{{ path_for('admin.delete', { id: post.id }) }}">Delete</a>
            </div>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-md-12 post-link">
            <a href="{{ path_for('posts.createPost') }}" class="btn btn-primary btn-lg active" role="button">Create Post</a>
        </div>
    </div>
{% endblock %}