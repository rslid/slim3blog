{% extends "base.twig" %}
{% block title %}
    Admin - Edit post
{% endblock %}
{% block content %}
    <div class="col-md-8">
        <form action="{{ path_for('admin.edit', { id: id }) }}" method="post" autocomplete="off">
            <div class="form-group">
                <label for="text">Title</label>
                <input type="text" name="title" value="{{ title }}" id="title" placeholder="you@example.bg" class="form-control">
            </div>
            <div class="form-group">
                <label for="body">Body</label>
                <input type="textarea" rows="4" name="body" value="{{ body }}" id="body" placeholder="Body text" class="form-control">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>  
        </form>
    </div>
{% endblock %}